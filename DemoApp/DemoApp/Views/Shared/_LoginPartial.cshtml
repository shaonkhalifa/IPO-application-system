@using DemoApp.Data.Models;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><img src="~/images/149071.png"   class="rounded-3 shadow-none" width="32" height="32"/> @User.Identity?.Name</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Applications", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link btn-outline-danger btn-sm text-dark shadow-sm">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item me-1">
            <a class="nav-link btn btn-link btn-outline-success btn-sm text-dark shadow-sm text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    
    <li class="nav-item">
            <a class="nav-link text-dark btn btn-link btn-outline-primary btn-sm text-dark shadow-sm" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
