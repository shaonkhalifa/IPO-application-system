@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="card rounded">
    <div class="card-header d-flex justify-content-center">
        <h1 class="text-muted">@ViewData["Title"]</h1>


    </div>
    <div class="card-body">
        <div class="row d-flex justify-content-center">
            <div class="col-md-6 shadow ">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2 class="text-center mt-4  text-muted">Create a new account.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating bg-light shadow-sm mb-2">

                        <input asp-for="Input.Name" class="form-control" autocomplete="name" aria-required="true" />
                        <label asp-for="Input.Name"></label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating bg-light shadow-sm mb-2">

                        <input asp-for="Input.CellPhone" class="form-control" autocomplete="cellphone" aria-required="true" />
                        <label asp-for="Input.CellPhone"></label>
                        <span asp-validation-for="Input.CellPhone" class="text-danger"></span>
                    </div>
                    <div class="form-floating bg-light shadow-sm mb-2">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating bg-light shadow-sm mb-2">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.Password"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating bg-light shadow-sm mb-2">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.ConfirmPassword"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-outline-primary mb-4 shadow-sm mb-4 ">Register</button>
                    <br />
                </form>
            </div>

        </div>
    </div>

</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
